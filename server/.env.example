# Example environment configuration for Garava backend
# Copy this file to .env and fill in real values

# Runtime
NODE_ENV=production
PORT=8080
CLIENT_URL=https://garava.in

# MongoDB
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# JWT
JWT_ACCESS_SECRET=CHANGE_ME_ACCESS_32CHARS_MIN
JWT_REFRESH_SECRET=CHANGE_ME_REFRESH_32CHARS_MIN

# Admin bootstrap user
ADMIN_EMAIL=admin@garava.in
ADMIN_NAME=Garava Admin
ADMIN_PASSWORD=CHANGE_ME_STRONG

# ImageKit
IMAGEKIT_PUBLIC_KEY=your_public_key
IMAGEKIT_PRIVATE_KEY=your_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/iwebc6s3s

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://garava.in/api/auth/google/callback

# SMTP (Hostinger)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@garava.in
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@garava.in

# GitHub Auto-deploy
GITHUB_WEBHOOK_SECRET=change-this-secret
